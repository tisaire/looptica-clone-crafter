
# Enable Expires headers
# ... keep existing code (Expires module)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  ExpiresByType video/mp4 "access plus 1 year"
  ExpiresByType video/webm "access plus 1 year"
  ExpiresByType audio/mp3 "access plus 1 year"
  ExpiresByType audio/ogg "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  ExpiresByType application/json "access plus 1 day"
  ExpiresByType application/xml "access plus 1 day"
  ExpiresByType text/xml "access plus 1 day"
  ExpiresByType text/html "access plus 2 hours"
</IfModule>

# Add CORS headers for fonts
# ... keep existing code (CORS and Cache-Control headers)
<IfModule mod_headers.c>
  <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=31536000"
  </FilesMatch>
  <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|avif|ico)$">
    Header set Cache-Control "public, max-age=31536000"
  </FilesMatch>
  <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000"
  </FilesMatch>
</IfModule>

# Disable ETags
# ... keep existing code (ETags)
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>
FileETag None

# Enable compression
# ... keep existing code (Compression)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE font/ttf
  AddOutputFilterByType DEFLATE font/otf
  AddOutputFilterByType DEFLATE font/woff
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Strip noredirect query parameter - prevents duplicate indexing by Google
  RewriteCond %{QUERY_STRING} (^|&)noredirect=[^&]* [NC]
  RewriteRule ^(.*)$ /$1? [R=301,L,NE]

  # Force HTTPS + www in one combined rule (handles http/https + www/non-www)
  RewriteCond %{HTTPS} off [OR]
  RewriteCond %{HTTP_HOST} !^www\. [NC]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^(.*)$ https://www.looptica.com/$1 [R=301,L,NE]

  # Normalize language root URLs: /ca -> /ca/, /en -> /en/, etc.
  RewriteRule ^(en|es|ca|de)$ /$1/ [R=301,L,NE]

  # Redirect old language paths to new prefixed structure (assuming 'ca' as default for these old structures)
  # The React app will handle redirect from / to /ca/ internally
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^cat/?(.*)$ /ca/$1 [R=301,L,NE]
  
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^en/?(.*)$ /en/$1 [R=301,L,NE]

  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^de/?(.*)$ /de/$1 [R=301,L,NE]

  # Legacy URL Redirects to new language-prefixed structure
  # Contact lenses
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^en/contact-lenses-poblenou-barcelona/?$ /en/services/contact-lenses [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^lentillas-poblenou-barcelona/?$ /es/services/contact-lenses [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^kontaktlinsen-poblenou-barcelona/?$ /de/services/contact-lenses [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^lentilles-poblenou-barcelona/?$ /ca/services/lents-contacte [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^ca/cat/lentilles-poblenou-barcelona/?$ /ca/services/lents-contacte [R=301,L,NE]
  
  # Orto-K
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^orto-k-poblenou-barcelona/?$ /es/services/orto-k [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^en/orto-k-in-poblenou-barcelona/?$ /en/services/orto-k [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^de/orto-k-in-poblenou-barcelona/?$ /de/services/orto-k [R=301,L,NE]
  
  # Salud visual
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^salud-visual-poblenou-barcelona/?$ /es/services/salut-visual [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^sehgesundheit-poblenou-barcelona/?$ /de/services/salut-visual [R=301,L,NE]

  # Technical Aids (new redirects)
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^technical-aids/?$ /ca/services/technical-aids [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^ayudas-tecnicas/?$ /es/services/technical-aids [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^ajudes-tecniques/?$ /ca/services/technical-aids [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^technische-hilfsmittel/?$ /de/services/technical-aids [R=301,L,NE]

  # Legacy WordPress blog redirects
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^blog/orto-k-barcelona/?$ /ca/services/orto-k [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^blog/examen-visual-en-poblenou/?$ /ca/services/salut-visual [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^blog/?(.*)$ /ca/ [R=301,L,NE]

  # Legacy WordPress legal page redirects
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^politica-de-privacidad/?$ /ca/legal/privacy-policy [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^politica-de-privacidad-3/?$ /ca/legal/privacy-policy [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^aviso-legal/?$ /es/legal/terms-conditions [R=301,L,NE]

  # Legacy WordPress appointment/calendar pages
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^calendario/?$ /ca/ [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^gestiona-tu-cita/?$ /ca/ [R=301,L,NE]

  # Legacy Catalan sub-pages (before generic cat->ca rule)
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^cat/salut-visual-poblenou/?$ /ca/services/salut-visual [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^cat/sample-page/?$ /ca/ [R=301,L,NE]

  # WordPress admin/system pages
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^wp-admin/?$ /ca/ [R=301,L,NE]
  RewriteCond %{HTTP_HOST} ^(www\.)?looptica\.com$ [NC]
  RewriteRule ^wp-login\.php$ /ca/ [R=301,L,NE]

  # Handle SPA routing:
  # If the request is not for an existing file or directory
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  
  # Rule to redirect non-language-prefixed paths to default language (e.g. /about -> /ca/about)
  # Exclude known asset paths and API paths
  RewriteCond %{REQUEST_URI} !^/(en|es|ca|de)/ [NC]
  RewriteCond %{REQUEST_URI} !^/(images|assets|lovable-uploads|favicon\.ico|robots\.txt|sitemap\.xml) [NC]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !^/$ # Exclude the root, as App.tsx handles redirection to /ca
  RewriteRule ^(.*)$ /ca/$1 [R=301,L,NE]

  # Main SPA Fallback - ensure all SPA routes pass through to index.html
  # This is crucial for React Router to handle the routes
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [QSA,L]
</IfModule>
